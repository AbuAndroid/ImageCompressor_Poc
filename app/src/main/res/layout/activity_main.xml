<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uiBtTakePickture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="camera"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uiIvCompressedImge" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uibtGetpickture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="@+id/uiBtTakePickture"
        app:layout_constraintBottom_toBottomOf="@+id/uiBtTakePickture"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/uiTvCompressedSize"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/uiBtTakePickture"
        app:layout_constraintStart_toStartOf="@+id/uiBtTakePickture"
        app:layout_constraintEnd_toEndOf="@+id/uiBtTakePickture"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/uiIvCompressedImge"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>